<div class="homepage">
  <div class="container">
    <div class="hero">
      <img src="/images/hero-image.png"/>
      <div>
        <h1><strong>We solve problems with science, art and code</strong></h1>
        <h1>We <a href="/about#whatwedo">Help</a>, <a href="/about#whatwedo">Teach</a> and <a href="about#whatwedo">Build</a> better software</h1>
        <span class="inline">
          <a href="/projects" class="btn btn-secondary">Browse Projects</a>
          <a href="#contact-us" class="btn btn-link mobile-hide">Contact us</a>
          <a href="/contact-us" class="btn btn-link desktop-hide">Contact us</a>
        </span>
      </div>
    </div>
    </div>

  <div class="section projects mobile-hide">
    <div class="container">
      <div class="section-heading">
        <h2>Projects</h2>
        <a href="/projects" class="btn btn-link">View all</a>
      </div>

      <div class="row">
        <% projects = sitemap.resources.select {|r| r.data['category'] && r.data['category'].downcase == 'project'} %>
        <% projects.sort_by{|p| p.data['order'] || 1000}.first(3).each do |project| %>
          <a class="project-card" href="<%=project.url%>">
            <img title="<%=project.data['img_name']%>" src="/images/projects/<%=project.data['img_name']%>-t.png"/>
            <h3><%=project.data['name']%></h3>
            <p><%=project.data['short_desc']%></p>
            <div class="techused">
                <span class="techlabel">Built with</span>
          
                <% project.data['technologies'].split(',').each do |tech| %>
                  <span title="<%=tech%>" class="techIcon <%=tech.gsub(/\s/,'_')%>"></span>
                <% end %>
            </div>
            <span class="btn btn-link">Read more</span>
        </a>
        <% end %>
        </div>
    </div>
  </div>

  <div class="section mobile-hide">
  <div class="container">
    <div class="section-heading">
      <h2>Talks</h2>
      <a href="/talks" class="btn btn-link">View all</a>
    </div>
    </div>
    <div class="talks">
      <% data.talks.talks.each do |f| %>
      <div class="talk-index">
        <span class="talk-preview">
          <div class="toggle-btns">
            <span class="talk-prev"></span>
            <span class="talk-next"></span>
          </div>
          <img src="/images/talks/<%= f.img %>.jpg"/>
          <iframe id="ytplayer" type="text/html" src="<%= f.url %>" frameborder="0"></iframe>
        </span>
        <div>
        <span class="talk-title">
          <span class="talk-heading"><%= f.heading %></span>
          <span class="talk-about"><%= f.description %></span>
          <div>
          <a href="/talks/<%= f.url_slug %>" class="btn-link">Watch in Full Screen</a>
          </div>
        </span>
        <span class="talk-by"><%= f.presenter %></span>
        </div>
      </div>
      <% end %>

      <div class="talk-index"></div>
    </div>
  </div>

  <div class="section blog mobile-hide">
    <div class="container">
      <div class="section-heading">
        <h2>Blog</h2>
        <a class="btn btn-link" href="https://medium.com/tarkalabs" target="_parent">View all</a>
      </div>

      <div class="row">
          <% data.posts[0...3].each do |post| %>
            <a class="blog-card" href="<%= post.link %>">
              <span class="img" style="background-image: url('<%= post.image %>')"></span>
              <div class="blog-card-content">
              <h3><span><%= post.title %></span></h3>
              <div class="blog-info">
                  <span>By <strong><%= post.author %></strong> on <%= Time.parse(post.published_at).strftime('%Y-%m-%d') %></span>
                  <span><i>Read time ~ 5 mins</i></span>
                </div>
              </div>
            </a>
          <% end %>
      </div>
    </div>
  </div>

